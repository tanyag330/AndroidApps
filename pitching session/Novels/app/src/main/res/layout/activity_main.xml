<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tanya.novels.MainActivity"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/main_page"
        android:layout_above="@+id/btn_english" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ENGLISH"
        android:id="@+id/btn_english"
        android:layout_above="@+id/btn_hindi"
        android:layout_centerHorizontal="true"
        android:background="#C657B5F8"
        android:clickable="true"
        android:onClick="goToSecondActivity"/>

    <Button
        android:layout_width="150dp"
        android:onClick="goToSecondActivity"
        android:layout_height="wrap_content"
        android:text="HINDI"
        android:id="@+id/btn_hindi"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_english"
        android:layout_marginBottom="132dp"
        android:background="#C657B5F8"
        android:clickable="true" />

</RelativeLayout>


