<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.tanya.profile.PROFILE"
    android:weightSum="1"
    android:background="#000000"
    android:baselineAligned="false"
    android:touchscreenBlocksFocus="false">


    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/tanya"
        android:id="@+id/imageView"
        android:background="#dd000000" />

    <TextView
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:text="tanya gupta"
        android:id="@+id/textView"
        android:textAlignment="viewStart"
        android:textColor="#ffffff"
        android:background="#cf000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:ems="10"
        android:id="@+id/editText"
        android:text="@string/name_tanya_gupta"
        android:autoText="false"
        android:lines="2"
        android:background="#cf000000"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="511dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText1"
        android:text="@string/date_of_birth_october_12_1996"
        android:lines="2"
        android:background="#cf000000"
        android:textColor="#ffffff" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:layout_width="345dp"
            android:layout_height="19dp"
            android:ems="10"
            android:id="@+id/editText2"
            android:text="Email: tanyagupta@gmail.com"
            android:lines="2"
            android:background="#cf000000"
            android:textColor="#ffffff" />
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText3"
        android:text="Phone: 9999988853"
        android:lines="2"
        android:background="#cf000000"
        android:layout_weight="0.18"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText4"
        android:text="college: maharaja agarsen institute of technology"
        android:lines="2"
        android:background="#cf000000"
        android:layout_weight="0.20"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText6"
        android:text="Branch: Information technology"
        android:lines="2"
        android:background="#cf000000"
        android:layout_weight="0.18"
        android:textColor="#ffffff" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText5"
        android:text="Hobbies: Reading, listening to music"
        android:lines="2"
        android:background="#cf000000"
        android:layout_weight="0.18"
        android:textColor="#ffffff" />


</LinearLayout>